<div class="container">
  <div class="images-part">
    <div>
      <%= image_tag @game.cover, class: "game-cover-show" %>
    </div>
    <div>
      <%= image_tag @game.screenshots[0..1].sample, class: "main-screenshots" %>
    </div>
    <div class="right-screens">
      <%= image_tag @game.screenshots[2..3].sample, class: "screenshots-show"%>
      <%= image_tag @game.screenshots[4..5].sample, class: "screenshots-show" %>
    </div>
  </div>
  <div class="modal fade" id="storesModal" tabindex="-1" aria-labelledby="storesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="storesModalLabel">Stores</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="d-flex justify-content-between">
            <% @game.stores&.each do |store| %>
              <%= link_to store.match(/(?<store>[a-z]+)\.[^\.]*$/)["store"].capitalize, store, target: "_blank", class: "button" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="title-show">
    <h1><%= @game.name %></h1>
    <turbo-frame id="buttons">
      <div class="d-flex">
        <div>
          <% if current_user.wishlist?(@game) %>
            <%= link_to "Remove from wishlist", wishlist_path(current_user.wishlists.find_by(game: @game)), data: { turbo_method: :delete }, class: "button" %>
          <% else %>
            <%= link_to "Add to wishlist", wishlists_path(game_id: @game.id), data: { turbo_method: :post }, class: "button" %>
          <% end %>
          <p><i class="fa-solid fa-clipboard-list"></i> <%= @game.wishlists.size + @game.name.sum(&:ord) %></p>
        </div>
        <div>
          <% if current_user.favorite?(@game) %>
            <%= link_to "Remove from favorites", favorite_path(current_user.favorites.find_by(game: @game)), data: { turbo_method: :delete }, class: "button" %>
          <% else %>
            <%= link_to "Add to favorites", favorites_path(game_id: @game.id), data: { turbo_method: :post }, class: "button" %>
          <% end %>
          <p><i class="fa-solid fa-heart"></i> <%= @game.favorites.size + @game.name.sum(&:ord) * (@game.name.chr.ord % 10 + 2) %></p>
        </div>
        <% unless @game.stores.blank? %>
          <div>
            <a class="button" style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#storesModal">Buy this game</a>
            <p><i class="fa-solid fa-cart-shopping"></i> <%= rand(15..45) %>€</p>
          </div>
        <% end %>
      </div>
    </turbo-frame>
  </div>
  <div class="ratingtags">
    ⭐️<%= @game.rating.round(1) %>/100
    <% @game.tags.first(5).each do |tag| %>
    <div class="gameshowtags"><%= tag %></div>
    <% end %>
  </div>
  <div>
  <%= @game.summary %>
  </div>
    <div class="row d-flex align-items-center">
      <div class="col-5 show-summary">
      </div>
      <div class= "col-12 show-infos">
        <div class="row">
            <% @game.platforms.each do |platform| %>
              <div>
                <% if platform.upcase.include?("PC") %>
                  <i class="fa-solid fa-desktop"></i> <%= platform %>
                <% elsif platform.upcase.include?("MAC") %>
                  <i class="fa-solid fa-desktop"></i> <%= platform %>
                <% elsif platform.upcase.include?("PLAY") %>
                  <i class="fa-brands fa-playstation"></i> <%= platform %>
                <% elsif platform.upcase.include?("XBOX") %>
                  <i class="fa-brands fa-xbox"></i> <%= platform %>
                <% else %>
                  <%= platform  %>
                <% end %>
              </div>
            <% end %>
          </div>
      </div>
    </div>
</div>
