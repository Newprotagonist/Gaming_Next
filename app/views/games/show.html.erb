<div class="container d-flex justify-content-center m-3">

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <h1><%= @game.name %></h1>
      <h2><%= @game.rating %></h2>
    </div>
  </div>

  <% @game.screenshots.each do |screenshot| %>
    <div>
      <%= screenshot %>
    </div>
  <% end %>
  <div>
    <%= @game.cover %>
  </div>

  <div>
    <%= @game.videos %>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <p>Platforms:
        <% @game.platforms.each do |platform| %>
            <%= platform %>
        <% end %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6">
      <p>Summary: <%= @game.summary %></p>

      <p>Tags:
        <% @game.tag.each do |tag| %>
            <%= tag %>,
        <% end %>
      </p>

      <div class="">
        <%# <%= link_to "Add to Wishlist", index_path %> %>
        <%# <%= link_to "See Wishlist", index_path %> %>
        <%# <%= link_to "Return to Suggestions", index_path %> %>
      </div>
    </div>
  </div>


</div>
