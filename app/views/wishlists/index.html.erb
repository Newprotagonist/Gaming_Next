<div class="container">
  <div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="shareModalLabel">Modal Title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" data-controller="share-modal">
          <label for="shareLink">Link:</label>
          <div class="input-group mb-3">
            <input id="shareLink" name="shareLink" type="url" class="form-control" value="<%= share_url(current_user.id)%>" data-share-modal-target="text" readonly/>
            <i class="fa-solid fa-clipboard input-group-text" data-action="click->share-modal#copy"></i>
          </div>
          <%= social_share_button_tag("Check out my game wishlist!", :url => share_url(current_user.id)) %>
        </div>
      </div>
    </div>
  </div>
  <div class="wishlist-title mb-3">
    <h1 class="h1-wishlist">Your Wishlist</h1>
  </div>
  <% if @wishlists.empty? %>
    <p>No games added to wishlists yet</p>
  <% else %>
    <ul class="container" data-controller="wishlist" id="wishlist">
      <a class="button wishlist-share" style="cursor: pointer" data-bs-toggle="modal" data-bs-target="#shareModal">Share</a>
        <% @wishlists.each do |wishlist| %>
          <li data-id="<%= wishlist.id %>">
            <%= render partial: 'wishlist-card', locals: {wishlist: wishlist} %>
          </li>
        <% end %>
    </ul>
    <% end %>
</div>
