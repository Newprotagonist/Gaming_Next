<div class="container">
  <div class="wishlist-title mb-3">
    <h1 class="h1-wishlist">Your Wishlist</h1>
  </div>

  <% if @wishlists.empty? %>
  <p>No games added to wishlists yet</p>
  <% else %>
  <div data-controller="popup">
    <%= link_to "Share with friends", share_path(current_user.id), class: "button" %>
  </div>
  <div>
    <%= social_share_button_tag("Share", :url => share_url(current_user.id)), data: { target: "popup.content" } %>
  </div>
  <ul class="container"
      data-controller="wishlist" id="wishlist">
        <% @wishlists.each do |wishlist| %>
          <li data-id="<%= wishlist.id %>">
            <%= render partial: 'wishlist-card', locals: {wishlist: wishlist} %>
          </li>
        <% end %>
  </ul>
  <% end %>
</div>
